<UserControl x:Class="InventarProgramm.UI.InventarlisteHelper.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventarProgramm.UI.InventarlisteHelper"
             mc:Ignorable="d"  Background="#140028B0"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#7c7c7c" Margin="4, 0, 4, 0" HorizontalAlignment="Center" Width="1" Grid.Column="2"/>
        <Rectangle Fill="#7c7c7c" Margin="4, 0, 4, 0" HorizontalAlignment="Center" Width="1" Grid.Column="4"/>
        <Rectangle Fill="#7c7c7c" Margin="4, 0, 4, 0" HorizontalAlignment="Center" Width="1" Grid.Column="6"/>
        <Rectangle Fill="#7c7c7c" Margin="4, 0, 4, 0" HorizontalAlignment="Center" Width="1" Grid.Column="8"/>
        <Rectangle Fill="#7c7c7c" Margin="4, 0, 4, 0" HorizontalAlignment="Center" Width="1" Grid.Column="10"/>
        <Rectangle Fill="#7c7c7c" Margin="4, 0, 4, 0" HorizontalAlignment="Center" Width="1" Grid.Column="12"/>

        <TextBlock FontSize="12" Margin="0, 2, 0, 2" HorizontalAlignment="Left" Grid.Column="1" Text="Artikelnummer"/>
        <TextBlock FontSize="12" Margin="0, 2, 0, 2" HorizontalAlignment="Left" Grid.Column="3" Text="Artikelname"/>
        <TextBlock FontSize="12" Margin="0, 2, 0, 2" HorizontalAlignment="Left" Grid.Column="5" Text="Bestand"/>
        <TextBlock FontSize="12" Margin="0, 2, 0, 2" HorizontalAlignment="Left" Grid.Column="7" Text="Beschreibung"/>
        <TextBlock FontSize="12" Margin="0, 2, 0, 2" HorizontalAlignment="Left" Grid.Column="9" Text="Regalname [Lager]"/>
        <TextBlock FontSize="12" Margin="0, 2, 0, 2" HorizontalAlignment="Left" Grid.Column="11" Text="Bearbeiten"/>
        <TextBlock FontSize="12" Margin="0, 2, 0, 2" HorizontalAlignment="Left" Grid.Column="13" Text="Löschen"/>
    </Grid>
</UserControl>